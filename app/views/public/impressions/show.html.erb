<h3>投稿詳細</h3>
<div><%= flash[:notice] %></div>
<div><%= @impression.title %></div>
<div><%= @impression.body %></div>
<% if @impression.user == current_user %>
<div><%= link_to "編集", edit_impression_path(@impression.id) %></div>
<div><%= link_to "削除", impression_path(@impression.id), method: :delete, "data_confirm" => "後悔しませんね？" %></div>
<% end %>

<div>コメント件数：<%= @impression.comments.count %>件</div>
<% @impression.comments.each do |comment| %>
<%= comment.user.name %>
<%= comment.created_at.strftime('%Y/%m/%d') %>
<%= comment.comment %>
<% end %>
<% if @comment.user == current_user %>
<%= link_to "削除", impression_comment_path(comment.impression, comment), method: :delete %>
<% end %>
<% if user_signed_in? %>
<%= form_with model: [@impression, @comment ] do |f| %>
<%= f.text_area :comment, placeholder: "コメント" %>
<%= f.submit 'コメント送信' %>
<% end %>
<% end %>