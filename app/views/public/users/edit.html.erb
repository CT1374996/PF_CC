<h3>マイページ編集</h3>
<%= form_with model: @user, url: users_mypage_update_path, method: :patch do |f| %>
<div>名前<%= f.text_field :name %></div>
<div>メールアドレス<%= f.text_field :email %></div>
<div>パスワード</div>
<div>自己紹介</div>
<%= f.text_area :introduction %>
<%= f.submit '編集完了' %>
<% end %>

<div><%= link_to "退会する", users_confirm_path %></div>