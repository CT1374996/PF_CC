<div class="container">
<h3>いいねした投稿一覧</h3>
<table class="table">
  <tr>
    <th>タイトル</th>
    <th>投稿者</th>
    <th>投稿日</th>
  </tr>
  <% @favorite_impressions.each do |impression| %>
  <tr>
    <td><%= link_to impression_path(impression.id) do %><%= impression.title %><% end %></td>
    <td><%= impression.user.name %></td>
    <td><%= l impression.created_at %></td>
  </tr>
  <% end %>
</table>
</div>