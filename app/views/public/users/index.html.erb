<div class="container">
  <h5><%= @user.name %>さんの投稿一覧</h5>
  <table class="table">
    <tr>
      <th>タイトル</th>
      <th>投稿日</th>
    </tr>
    <% @impressions.each do |impression| %>
    <tr>
      <td><%= link_to impression_path(impression.id) do %><%= impression.title %><% end %></td>
      <td><%= impression.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <% end %>
  </table>
</div>