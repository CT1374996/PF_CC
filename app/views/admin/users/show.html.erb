<div class="container">
  <h5><%= @user.name %>さんの会員情報</h5>
  <table class="table">
    <tr>
      <td>会員ID</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td><% if @user.is_active == true %>有効<% else %>退会<% end %></td>
    </tr>
  </table>
  <% if @user.is_active? %>
  <div><%= link_to "強制的に退会させる", admin_users_withdrawal_path(@user), method: :patch, data: {confirm: "管理者権限により、強制的に退会させますか？"} %></div>
  <% else %>
  <% end %>
  <%= link_to "編集", edit_admin_user_path %>
</div>