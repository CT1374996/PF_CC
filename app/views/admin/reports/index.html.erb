<div class="container">
<%= flash[:notice] %>
<table class="table">
<tr>
<th>通報ID</th>
<th>問題の会員</th>
<th>通報者</th>
<th>ステータス</th>
</tr>
<% @reports.each do |report| %>
<tr>
<td><%= link_to admin_report_path(report.id) do %><%= report.id %><% end %></td>
<td><%= report.reported.name %></td>
<td><%= report.reporter.name %></td>
<td><%= report.status_i18n %></td>
</tr>
<% end %>
</table>
</div>